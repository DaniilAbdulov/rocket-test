{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    // включить поддержку для синтаксиса ES модулей
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    // если вы хотите использовать .js расширения при импорте
    "resolveJsonModule": true,
    // если вы хотите импортировать JSON файлы
    "experimentalDecorators": true // Если вы используете декораторы в TypeScript
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
